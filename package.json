{
  "name": "request-iframe",
  "version": "0.0.3",
  "description": "Communicate with iframes like sending HTTP requests",
  "main": "library/index.js",
  "types": "library/index.d.ts",
  "scripts": {
    "build": "npm run build:types && npm run build:js && npm run build-react:types && npm run build-react:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir library --extensions .ts --copy-files",
    "build-react:types": "tsc -p react/tsconfig.json --emitDeclarationOnly",
    "build-react:js": "babel react/src --out-dir react/library --extensions .ts --copy-files",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "npm run build"
  },
  "files": [
    "library",
    "react/library",
    "README.md",
    "README.CN.md",
    "QUICKSTART.md",
    "QUICKSTART.CN.md"
  ],
  "keywords": [
    "request-iframe",
    "iframe",
    "postMessage",
    "http",
    "request",
    "axios"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gxlmyacc/request-iframe"
  },
  "author": "gxlmyacc",
  "license": "MIT",
  "dependencies": {
    "@types/react": "16",
    "@types/react-dom": "16",
    "core-js": "^3.48.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.28.6",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/runtime": "^7.28.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
